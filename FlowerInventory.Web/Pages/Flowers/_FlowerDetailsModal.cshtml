@model FlowerInventorySystem.FlowerInventory.Web.Model.Flower

@{
  var imgUrl = string.IsNullOrWhiteSpace(Model.ImagePath)
    ? "http://localhost:9000/images/default/default-flower.jpg"
    : $"http://localhost:9000/images/{Model.ImagePath}";
  var activeBadgeClass = Model.IsActive ? "text-bg-success" : "text-bg-secondary";
  var activeText = Model.IsActive ? "Active" : "Inactive";
}

<div class="modal fade" id="flowerDetails-@Model.Id" tabindex="-1" aria-labelledby="flowerDetailsLabel-@Model.Id"
     aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <div class="d-flex align-items-center gap-2">
          <h5 class="modal-title" id="flowerDetailsLabel-@Model.Id">@Model.Name</h5>
          <span class="badge @activeBadgeClass">@activeText</span>
          @if (!string.IsNullOrWhiteSpace(Model.Type))
          {
            <span class="badge text-bg-info">@Model.Type</span>
          }
          @if (!string.IsNullOrWhiteSpace(Model.Category?.Name))
          {
            <span class="badge text-bg-secondary">@Model.Category!.Name</span>
          }
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <div class="row g-4 align-items-start">
          <!-- Image -->
          <div class="col-12 col-md-5">
            <div class="ratio ratio-4x3 bg-body-secondary rounded-3 overflow-hidden">
              <img src="@imgUrl" alt="@Model.Name" class="w-100 h-100" style="object-fit:fill"/>
            </div>
          </div>

          <!-- Info -->
          <div class="col-12 col-md-7">
            <div class="mb-3">
              <div class="text-muted small">Price</div>
              <div class="h3 mb-0">@Model.Price.ToString("0.00")</div>
            </div>

            <div class="row g-2 small">
              <div class="col-6">
                <div class="border rounded-3 p-2">
                  <div class="text-muted">SKU</div>
                  <div>@(string.IsNullOrWhiteSpace(Model.Sku) ? "—" : Model.Sku)</div>
                </div>
              </div>
              <div class="col-6">
                <div class="border rounded-3 p-2">
                  <div class="text-muted">Stock</div>
                  <div>@Model.StockQuantity</div>
                </div>
              </div>
              <div class="col-6">
                <div class="border rounded-3 p-2">
                  <div class="text-muted">Type</div>
                  <div>@Model.Type</div>
                </div>
              </div>
              <div class="col-6">
                <div class="border rounded-3 p-2">
                  <div class="text-muted">Category</div>
                  <div>@(Model.Category?.Name ?? "—")</div>
                </div>
              </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
              <div class="mt-3">
                <div class="text-muted small mb-1">Description</div>
                <div class="p-3 border rounded-3 bg-light">@Model.Description</div>
              </div>
            }
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
