@page "{code:int}"
@model ErrorModel
@{
    ViewData["Title"] = "Something went wrong";
    var code = Model.StatusCode;
}
<div class="card border-0 shadow-sm my-5">
    <div class="card-body p-4 p-md-5 text-center">
        <div class="display-4 mb-2">@(code == 404 ? "404" : "no")</div>
        <h3 class="mb-2">
            @(code == 404 ? "We couldn’t find that page." : "An unexpected error occurred.")
        </h3>
        <p class="text-muted mb-4">
            Trace ID: <code>@Model.TraceId</code>
        </p>
        <a class="btn btn-primary" asp-page="/Index">Back to dashboard</a>
    </div>
</div>