@page
@model IndexModel
@{
  ViewData["Title"] = "Welcome";
}

<!-- Hero -->
<section class="hero-landing rounded-4 p-4 p-md-5 mb-5 position-relative overflow-hidden">
  <div class="row align-items-center g-4">
    <div class="col-lg-7">
      <div class="d-inline-flex align-items-center gap-2 text-white-50 small mb-2">
        <span class="badge bg-white text-primary">New</span>
        <span>MinIO-powered images • Clean CRUD • Fast search</span>
      </div>
      <h1 class="display-5 fw-bold text-white mb-2">Your flowers, perfectly organized.</h1>
      <p class="lead text-white-50 mb-4">
        Flower Inventory helps you track products, categories, pricing, and images — all in one place.
        Manage your store in seconds, not spreadsheets.
      </p>
    </div>

    <div class="col-lg-5">
      <div class="hero-card glass-card p-4 p-md-5">
        <div class="d-flex align-items-center gap-3 mb-3">
          <div class="icon-pill">
            <i class="bi bi-bar-chart"></i>
          </div>
          <div>
            <div class="text-uppercase small text-white-50">Today</div>
            <div class="h5 text-white mb-0">Inventory snapshot</div>
          </div>
        </div>

        <div class="row g-3">
          <div class="col-6">
            <div class="mini-stat">
              <div class="mini-stat-label">Flowers</div>
              <div class="mini-stat-value">
                @Model.FlowerCount
              </div>
            </div>
          </div>
          <div class="col-6">
            <div class="mini-stat">
              <div class="mini-stat-label">Categories</div>
              <div class="mini-stat-value">
                @Model.CategoryCount
              </div>
            </div>
          </div>
        </div>

        <div class="mt-3 small text-white-50">
          Counts update automatically as you add, edit, and delete items.
        </div>
      </div>
    </div>
  </div>

  <!-- decorative shapes -->
  <div class="hero-blob hero-blob-1"></div>
  <div class="hero-blob hero-blob-2"></div>
</section>

<!-- What you can do -->
<section class="mb-5">
  <h2 class="section-title mb-3">What you can do</h2>
  <div class="row g-3">
    <div class="col-12 col-md-6 col-lg-3">
      <div class="card h-100 shadow-sm card-hover">
        <div class="card-body">
          <div class="icon-circle text-primary mb-3"><i class="bi bi-basket"></i></div>
          <h5 class="mb-1">Manage Flowers</h5>
          <p class="text-muted mb-3">Create, edit, delete, and quickly search flowers by name, type, and category.</p>
          <a class="btn btn-sm btn-outline-primary" asp-page="/Flowers/Index">Open Flowers</a>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-6 col-lg-3">
      <div class="card h-100 shadow-sm card-hover">
        <div class="card-body">
          <div class="icon-circle text-success mb-3"><i class="bi bi-collection"></i></div>
          <h5 class="mb-1">Organize Categories</h5>
          <p class="text-muted mb-3">Group products into clear categories to keep inventory tidy and searchable.</p>
          <a class="btn btn-sm btn-outline-success" asp-page="/Categories/Index">Open Categories</a>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-6 col-lg-3">
      <div class="card h-100 shadow-sm card-hover">
        <div class="card-body">
          <div class="icon-circle text-warning mb-3"><i class="bi bi-image"></i></div>
          <h5 class="mb-1">Image Uploads</h5>
          <p class="text-muted mb-3">Upload product images to MinIO for fast, reliable display across the app.</p>
          <a class="btn btn-sm btn-outline-warning" asp-page="/Media/Manage">Add an Image</a>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-6 col-lg-3">
      <div class="card h-100 shadow-sm card-hover">
        <div class="card-body">
          <div class="icon-circle text-info mb-3"><i class="bi bi-search"></i></div>
          <h5 class="mb-1">Search & Sort</h5>
          <p class="text-muted mb-3">Find items instantly with powerful filters and sorting tools.</p>
          <a class="btn btn-sm btn-outline-info" asp-page="/Flowers/Index">Try it</a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- How it works -->
<section class="mb-5">
  <h2 class="section-title mb-3">How it works</h2>
  <div class="row g-3">
    <div class="col-md-4">
      <div class="step p-4 rounded-3 h-100">
        <div class="step-num">1</div>
        <h6 class="mb-2">Add categories</h6>
        <p class="text-muted mb-0">Create a few categories (e.g., Roses, Tulips) to organize your flowers.</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="step p-4 rounded-3 h-100">
        <div class="step-num">2</div>
        <h6 class="mb-2">Add flowers & images</h6>
        <p class="text-muted mb-0">Enter details and upload an image — we’ll handle MinIO behind the scenes.</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="step p-4 rounded-3 h-100">
        <div class="step-num">3</div>
        <h6 class="mb-2">Search, sort, manage</h6>
        <p class="text-muted mb-0">Quickly find products, update prices, or remove items when they’re out.</p>
      </div>
    </div>
  </div>
</section>

<section
  class="hero-landing rounded-4 p-4 p-md-5 mb-4 d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3 position-relative overflow-hidden">
  <div>
    <h3 class="mb-1 text-white">Ready to manage your inventory?</h3>
    <p class="text-white-50 mb-0">Jump straight to what you need right now.</p>
  </div>
  <div class="d-flex flex-wrap gap-2">
    <a class="btn btn-primary btn-lg btn-shadow" asp-page="/Flowers/Index"><i class="bi bi-basket me-2"></i>Flowers</a>
    <a class="btn btn-primary btn-lg btn-shadow" asp-page="/Categories/Index"><i class="bi bi-collection me-2"></i>Categories</a>
  </div>
  <div class="hero-blob hero-blob-1"></div>
  <div class="hero-blob hero-blob-2"></div>
</section>
