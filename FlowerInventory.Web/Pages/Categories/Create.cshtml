@page
@model CreateModel
@{
  ViewData["Title"] = "Add Category";
}

<section class="rounded-4 p-4 p-md-5 mb-4" style="background:
    radial-gradient(900px 500px at 90% 20%, rgba(37,99,235,.18), transparent),
    radial-gradient(900px 500px at 10% 10%, rgba(124,58,237,.18), transparent),
    linear-gradient(135deg, #1f2937 0%, #111827 100%); color:#fff;">
  <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
    <div>
      <h1 class="fw-bold mb-1">Add a new category</h1>
      <p class="text-white-50 mb-0">Name it, describe it, set display order, and pick an image.</p>
    </div>
    <div class="text-md-end">
      <a class="btn btn-outline-light" asp-page="/Categories/Index">
        <i class="bi bi-arrow-left-short me-1"></i>Back to list
      </a>
    </div>
  </div>
</section>

<form method="post" enctype="multipart/form-data" class="card shadow-sm border-0">
  <div class="card-body">
    <div class="row g-4">
      <!-- Left: fields -->
      <div class="col-12 col-lg-7">
        <div class="row g-3">
          <div class="col-md-8">
            <label class="form-label">Name</label>
            <input asp-for="Input.Name" class="form-control"/>
            <span asp-validation-for="Input.Name" class="text-danger"></span>
          </div>
          <div class="col-md-4">
            <label class="form-label">Display order</label>
            <input asp-for="Input.DisplayOrder" type="number" class="form-control"/>
            <span asp-validation-for="Input.DisplayOrder" class="text-danger"></span>
          </div>

          <div class="col-12">
            <label class="form-label">Description</label>
            <textarea asp-for="Input.Description" rows="3" class="form-control"></textarea>
            <span asp-validation-for="Input.Description" class="text-danger"></span>
          </div>

          <div class="col-12">
            <label class="form-label d-block">Status</label>
            <input type="hidden" asp-for="Input.IsActive" value="false"/>
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" id="isActiveSwitch"
                     name="Input.IsActive" value="true" @(Model.Input.IsActive ? "checked" : null)/>
              <label class="form-check-label" for="isActiveSwitch">Active</label>
            </div>
            <span asp-validation-for="Input.IsActive" class="text-danger"></span>
          </div>
        </div>
      </div>

      <!-- Right: image -->
      <div class="col-12 col-lg-5">
        <div class="border rounded-3 p-3 h-100">
          <div class="mb-2 small text-muted">Image</div>

          <div class="ratio ratio-4x3 bg-body-secondary rounded-3 overflow-hidden mb-3">
            @{
              var preview = string.IsNullOrWhiteSpace(Model.SelectedKey)
                ? "http://localhost:9000/images/default/default-category.jpg"
                : $"http://localhost:9000/images/{Model.SelectedKey}";
            }
            <img id="imagePreview" src="@preview" alt="preview" class="w-100 h-100" style="object-fit:cover"/>
          </div>

          <div class="mb-2">
            <input asp-for="Image" type="file" accept="image/*" class="form-control" onchange="previewFile(event)"/>
            <div class="form-text">PNG/JPG, up to 5 MB. If both file &amp; gallery are set, file wins.</div>
            <span asp-validation-for="Image" class="text-danger"></span>
          </div>

          <div class="d-flex align-items-center gap-2">
            <input type="hidden" id="SelectedKey" name="SelectedKey" value="@Model.SelectedKey"/>
            @if (!string.IsNullOrWhiteSpace(Model.SelectedKey))
            {
              <span class="badge text-bg-light text-truncate"
                    title="@Model.SelectedKey">Selected: @Model.SelectedKey</span>
            }
            <a class="btn btn-outline-secondary btn-sm" asp-page="/Media/Manage" asp-route-Folder="Categories"
               target="_blank">
              <i class="bi bi-images me-1"></i> Open media
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card-footer bg-white d-flex justify-content-end gap-2">
    <button class="btn btn-success" type="submit"><i class="bi bi-check2-circle me-1"></i>Create</button>
    <a class="btn btn-secondary" asp-page="/Categories/Index">Cancel</a>
  </div>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial"/>
  <script>
    function previewFile(e) {
      const file = e.target.files?.[0];
      const img = document.getElementById('imagePreview');
      if (!file || !img) return;
      const reader = new FileReader();
      reader.onload = () => {
        img.src = reader.result;
      };
      reader.readAsDataURL(file);
      const key = document.getElementById('SelectedKey');
      if (key) key.value = '';
    }
  </script>
}
